# RaeenOS EditorConfig
# https://editorconfig.org/

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ source and header files
[*.{c,h,cpp,hpp,cc,hh,cxx,hxx}]
indent_style = space
indent_size = 4
max_line_length = 100

# Assembly files
[*.{s,S,asm}]
indent_style = space  
indent_size = 4
max_line_length = 100

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4
max_line_length = 100

# Makefiles (must use tabs)
[{Makefile,makefile,*.mk,*.make}]
indent_style = tab
indent_size = 4

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

# Documentation files
[*.{md,rst,txt}]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space  
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,config}]
indent_style = space
indent_size = 4

# Linker script files
[*.{ld,lds}]
indent_style = space
indent_size = 4

# Assembly inline in C files
[*.c]
# Allow inline assembly to use tabs for alignment
trim_trailing_whitespace = false